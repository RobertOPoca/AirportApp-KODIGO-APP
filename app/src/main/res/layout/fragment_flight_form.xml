<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.FlightFormFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/flight.form.title"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:textAlignment="center"
                    android:layout_marginTop="25dp">
                </TextView>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="30dp"
                    app:boxBackgroundColor="#FFF"
                    android:hint="@string/flight.form.airline">

                    <AutoCompleteTextView
                        android:id="@+id/txtAirline"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        />

                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="15dp"
                    app:boxBackgroundColor="#FFF"
                    android:hint="@string/flight.form.airplane">

                    <AutoCompleteTextView
                        android:id="@+id/txtAirplane"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="15dp"
                    app:boxBackgroundColor="#FFF"
                    android:hint="@string/flight.form.status">

                    <AutoCompleteTextView
                        android:id="@+id/txvStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        />

                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="15dp"
                    app:boxBackgroundColor="#FFF"
                    android:hint="@string/flight.form.depart.country">

                    <AutoCompleteTextView
                        android:id="@+id/txvDepartCountry"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        />

                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="15dp"
                    app:boxBackgroundColor="#FFF"
                    android:hint="@string/flight.form.depart.city">

                    <AutoCompleteTextView
                        android:id="@+id/txvDepartCity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        />

                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="15dp"
                    app:boxBackgroundColor="#FFF"
                    android:hint="@string/flight.form.arrival.country">

                    <AutoCompleteTextView
                        android:id="@+id/txvArrivalCountry"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        />

                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="15dp"
                    app:boxBackgroundColor="#FFF"
                    android:hint="@string/flight.form.arrival.city">

                    <AutoCompleteTextView
                        android:id="@+id/txvArrivalCity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        />

                </com.google.android.material.textfield.TextInputLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/outlinedTextField"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="5dp"
                        android:hint="@string/flight.form.dept.date"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/txtDeptDate"
                            />

                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnDepDate"
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        android:textColor="#424242"
                        app:icon="@drawable/ic_date"
                        app:iconTint="#424242"
                        app:rippleColor="#424242"
                        app:strokeColor="#424242"
                        app:strokeWidth="3dp"
                        android:layout_gravity="center"
                        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <com.google.android.material.textfield.TextInputLayout

                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="5dp"
                        android:hint="@string/flight.form.dept.time"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/txtDeptTime"
                            />

                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnDepTime"
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        android:textColor="#424242"
                        app:icon="@drawable/ic_time"
                        app:iconTint="#424242"
                        app:rippleColor="#424242"
                        app:strokeColor="#424242"
                        app:strokeWidth="3dp"
                        android:layout_gravity="center"
                        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="5dp"
                        android:hint="@string/flight.form.arrival.date"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/txtArrDate"
                            />

                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnArrDate"
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        android:textColor="#424242"
                        app:icon="@drawable/ic_date"
                        app:iconTint="#424242"
                        app:rippleColor="#424242"
                        app:strokeColor="#424242"
                        app:strokeWidth="3dp"
                        android:layout_gravity="center"
                        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <com.google.android.material.textfield.TextInputLayout

                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="5dp"
                        android:hint="@string/flight.form.arrival.time"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/txtArrTime"
                            />

                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnArrTime"
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        android:textColor="#424242"
                        app:icon="@drawable/ic_date"
                        app:iconTint="#424242"
                        app:rippleColor="#424242"
                        app:strokeColor="#424242"
                        app:strokeWidth="3dp"
                        android:layout_gravity="center"
                        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center_horizontal">
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnSaveFlight"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="@string/airline.save"
                            android:textColor="#424242"
                            app:icon="@drawable/ic_save"
                            app:iconTint="#424242"
                            app:rippleColor="#424242"
                            app:strokeColor="#424242"
                            app:strokeWidth="3dp"
                            android:layout_marginBottom="10dp"
                            android:layout_gravity="center"
                            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                            android:layout_marginTop="20dp"/>
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnCreateIncident"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="@string/flight.form.incident.btn"
                            android:textColor="#424242"
                            app:icon="@drawable/ic_save"
                            app:iconTint="#424242"
                            app:rippleColor="#424242"
                            app:strokeColor="#424242"
                            app:strokeWidth="3dp"
                            android:layout_marginBottom="10dp"
                            android:layout_gravity="center"
                            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                            android:layout_marginTop="20dp"/>
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnReportById"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="Report"
                            android:textColor="#424242"
                            app:icon="@drawable/ic_save"
                            app:iconTint="#424242"
                            app:rippleColor="#424242"
                            app:strokeColor="#424242"
                            app:strokeWidth="3dp"
                            android:layout_marginBottom="10dp"
                            android:layout_gravity="center"
                            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                            android:layout_marginTop="20dp"/>

                    </LinearLayout>

                </LinearLayout>
               </LinearLayout>

        </ScrollView>

    </LinearLayout>
</FrameLayout>